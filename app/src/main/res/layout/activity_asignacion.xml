<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aparatos asignados"
        android:layout_marginStart="90dp"
        android:textSize="25dp"
        android:layout_marginLeft="90dp" />
    <Button
        android:id="@+id/eliminar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/eliminar"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/eliminarAparatos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#00b0ff"
        android:layout_marginLeft="10dp"
        android:background="@drawable/boton"
        android:layout_centerHorizontal="true"
        android:text="@string/eliminar"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"

        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Asignacion"
            >
        </ListView>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/poiuyt"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:background="#ffffff"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/medio"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:textSize="20dp"
            />
        <Spinner
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="159dp"
            android:id="@+id/spinnerMedio"
            android:spinnerMode="dropdown"
            android:background="@drawable/contorno"
            >
        </Spinner>
        <Button
            android:id="@+id/aceptarMedio"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/aceptar"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="250dp"
            android:textSize="20dp"
            android:layout_marginStart="30dp"
            />
        <Button
            android:id="@+id/cancelarMedio"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="30dp"
            android:text="@string/cancelar"
            android:textAlignment="center"
            android:textSize="20dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/siguiente"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelarAsignacion"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/boton"
        android:backgroundTint="#00b0ff"
        android:enabled="false"
        android:text="@string/asigar_Aparatos"
        android:textColor="#000" />

    <Button
        android:id="@+id/cancelarAsignacion"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aceptarAsignacion"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#00b0ff"
        android:textColor="#000"
        android:background="@drawable/boton"
        android:text="@string/cancelar" />

    <Button
        android:id="@+id/aceptarAsignacion"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/boton"
        android:backgroundTint="#00b0ff"
        android:enabled="false"
        android:text="@string/aceptar"
        android:textColor="#000" />
</RelativeLayout>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/qwe"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/extensiones_Adicionales"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/asd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qwe"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"

        android:layout_marginEnd="40dp"
        android:text="@string/numero_de_Extensiones"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExtencion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/contorno"
        android:gravity="center"
        android:text="---"
        android:textSize="23dp" />

    <Button
        android:id="@+id/extencionAceptar"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtExtencion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/boton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/aceptar"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/extencionSalir"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtExtencion"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/extencionAceptar"
        android:background="@drawable/boton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/salir"
        android:textColor="#ffff" />
</RelativeLayout>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="96dp"
        android:text="@string/extensiones_Adicionales"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="40dp"
        android:text="@string/numero_de_Extensiones"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtExtencion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="201dp"
        android:background="@drawable/contorno"
        android:gravity="center"
        android:text="---"
        android:textSize="23dp" />

    <Button
        android:id="@+id/extencionAceptar"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="463dp"
        android:layout_marginEnd="245dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/boton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/aceptar"
        android:textColor="#ffff" />

    <Button
        android:id="@+id/extencionSalir"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="218dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/boton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/salir"
        android:textColor="#ffff" />
</RelativeLayout>
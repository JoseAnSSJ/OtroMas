<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignacion de Aparatos"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginTop="35dp"
        android:background="@android:drawable/ic_search_category_default"
        android:id="@+id/escanear"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp" />

  <!--  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regresar"
        android:layout_marginStart="250dp"
        android:layout_marginTop="35dp"
        android:id="@+id/regresar"
        android:layout_marginLeft="250dp" />
-->
    <TextView
        android:id="@+id/codigo"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="45dp"
        android:visibility="invisible"
        android:layout_marginLeft="110dp"
        android:background="@drawable/contorno"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Aparato:"
        android:layout_marginTop="90dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:id="@+id/tipo_aparato"
        android:background="@drawable/contorno"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aparato:"
        android:layout_marginTop="180dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:id="@+id/aparatoDisponible"
        android:background="@drawable/contorno"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios a los que se le instala el aparato:"
        android:layout_marginTop="260dp"
        android:textSize="18dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:id="@+id/sss"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Servicios123"
            ></ListView>

    </RelativeLayout>

  <!--  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/sss"
android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Placas"
            ></ListView>
    </RelativeLayout>-->
</RelativeLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/agregar"
        />
</RelativeLayout>
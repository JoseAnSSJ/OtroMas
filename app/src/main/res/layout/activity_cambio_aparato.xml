<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/ads"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:id="@+id/qwe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Selecciona el Aparato"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/posicion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/qwe"
                    android:layout_marginTop="50dp"
                    android:text="Aparato a cambiar"
                    android:textSize="30dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="120dp"
                    android:text="Aparato:"
                    android:textSize="25dp"
                    android:textStyle="bold"

                    />

                <Spinner
                    android:id="@+id/aparato"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="150dp"
                    android:autofillHints="asd"
                    android:background="@drawable/spinners"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="190dp"
                    android:text="Estado del aparato:"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/estadoaparato"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="220dp"
                    android:background="@drawable/spinners" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ads"
                android:layout_marginTop="300dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aparato a asignar"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/aa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="80dp"
                        android:text="Tipo aparato:"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/tipo_aparato1"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="110dp"
                        android:background="@drawable/spinners" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aa">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="40dp"
                        android:text="Aparato:"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/aparatoAsignar"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="70dp"
                        android:background="@drawable/spinners" />
                </RelativeLayout>

                <Button
                    android:id="@+id/uno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="280dp"
                    android:text="Aceptar" />
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
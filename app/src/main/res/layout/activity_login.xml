<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/logo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/usuario"
            android:layout_below="@+id/logo"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/usurio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:hint="Usuario"
            android:maxLines="1"
            android:singleLine="true"
            android:text="SISTE"
            android:textSize="30dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contrase単a"
            android:layout_below="@+id/usurio"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/contrase単a"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usurio"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:hint="@string/contrase単a"
            android:singleLine="true"
            android:text="123"
            android:textSize="30dp"
            android:password="true"
            />
        <Button
            android:id="@+id/entrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contrase単a"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/entrar"
            android:textSize="30dp"></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tokenview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="200dp"
            />
    </RelativeLayout>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.EjecutarFragment">

  <!-- TODO: Update blank fragment layout -->

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animado1">


      <Button
          android:id="@+id/ejec"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_alignParentTop="true"
          android:layout_marginTop="0dp"
          android:text="Ejecutar" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="70dp"
        android:text="Status comando"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="70dp"

        android:hint="Espera"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="120dp"
        android:text="Resultado:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msgEjecutarOrd"
        android:layout_width="247dp"
        android:layout_height="122dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="82dp"
        android:background="#2598" />

    <RelativeLayout
        android:id="@+id/animado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


      <Button
          android:id="@+id/restart"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:layout_marginTop="290dp"
          android:text="Reiniciar"
          android:enabled="false" />
      <Button
          android:id="@+id/salirEjecutarOrd"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:layout_marginTop="340dp"
          android:text="Salir"
          android:visibility="visible" />
    </RelativeLayout>

  </RelativeLayout>
</FrameLayout>
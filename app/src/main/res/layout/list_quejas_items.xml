<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="114dp">

        <TextView
            android:id="@+id/contratoq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="---"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nombreq"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:text="---"
            android:textSize="14dp" />

        <Button
            android:id="@+id/quejaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="220dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/observacion"
            android:text="---"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/statusq"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="325dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="---"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dir"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreq"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:text="@string/direccion"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dir"
            android:layout_alignBottom="@+id/dir"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/dir"
            android:gravity="center"
            android:text="-----------------"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>